{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "exclude": ["./dist"],
  "include": [
    "src/**/*",
    ".storybook/**/*",
    ".eslintrc.js",
    "esbuild.config.js"
  ]
}
